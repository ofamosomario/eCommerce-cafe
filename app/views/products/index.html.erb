<br>
<section class="page-section about-heading">
  <div class="container">
    <div class="about-heading-content">
      <div class="row">
        <div class="col-xl-9 col-lg-10 mx-auto">
          <div class="bg-faded rounded p-5">
            <h2 class="section-heading mb-4">
              <span class="section-heading-upper">Métodos de pagamento:</span>
            </h2>

              <table class="table">
                <thead>
                  <tr>
                    <th>Título</th>
                    <th>Sub-título</th>
                    <th>Foto</th>
                    <th>Valor</th>
                    <th>Descrição</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @products.each do |product| %>
                    <tr>
                      <td><%= product.title %></td>
                      <td><%= product.sub_title %></td>
                      <td><%= product.photo %></td>
                      <td><%= product.value %></td>
                      <td><%= product.description %></td>
                      <td>
                        <%= link_to 'Edit', edit_product_path(product) %>
                        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>

              <br />

              <%= link_to 'Novo registro', new_product_path %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>