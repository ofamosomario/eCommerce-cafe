<section class="page-section about-heading">
  <div class="container">
    <div class="about-heading-content">
      <div class="row">
        <div class="col-xl-9 col-lg-10 mx-auto">
          <div class="bg-faded rounded p-5">
            <h2 class="section-heading mb-4">
              <span class="section-heading-upper">Produto:</span>
            </h2>

            <%= simple_form_for(@product) do |f| %>
              <%= f.error_notification %>
              <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

              <div class="form-inputs">
                <%= f.input :title , label: 'Título:' , input_html: { class: 'form-control' } %>
                <%= f.input :sub_title , label: 'Sub-título:' , input_html: { class: 'form-control' } %>
                <%= f.input :photo , label: 'Foto:' , input_html: { class: 'form-control' } %>
                <%= f.input :value , label: 'Valor:' , input_html: { class: 'form-control' } %>
                <%= f.input :description , label: 'Descrição:' , input_html: { class: 'form-control' } %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, value: 'Criar' , class: 'btn btn-primary' %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>