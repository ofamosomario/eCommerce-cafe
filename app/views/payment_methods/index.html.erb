<br />
<section class="page-section about-heading">
  <div class="container">
    <div class="about-heading-content">
      <div class="row">
        <div class="col-xl-9 col-lg-10 mx-auto">
          <div class="bg-faded rounded p-5">
            <h2 class="section-heading mb-4">
              <span class="section-heading-upper">Métodos de pagamento:</span>
            </h2>

              <p id="notice"><%= notice %></p>

              <table class="table">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th colspan="3">Ações</th>
                  </tr>
                </thead>

                <tbody>
                  <% @payment_methods.each do |payment_method| %>
                    <tr>
                      <td><%= payment_method.name %></td>
                      <td>
                        <%= link_to 'Editar', edit_payment_method_path(payment_method) %>
                        <%= link_to 'Deletar', payment_method, method: :delete, data: { confirm: 'Você tem certeza?' } %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>

              <br>

              <%= link_to 'Novo registro', new_payment_method_path %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>